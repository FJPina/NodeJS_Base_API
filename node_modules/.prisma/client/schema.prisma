generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Direccion {
  IdDireccion        Int       @id @default(autoincrement())
  Usuario Usuario    @relation(fields: [IdUsuario], references: [IdUsuario])
  IdUsuario          Int
  Calle              String   @db.VarChar(100)
  NumeroExt          String   @db.VarChar(10)
  NumeroInt          String?  @db.VarChar(10)
  Colonia            String   @db.VarChar(100)
  Municipio          String   @db.VarChar(100)
  Estado             String   @db.VarChar(100)
  CP                 String   @db.VarChar(10)
  FechaCreacion      DateTime? @db.DateTime(0)
  FechaActualizacion DateTime? @db.DateTime(0)
  Estatus            Int
}

model Ganador {
  IdGanador          Int       @id @default(autoincrement())
  IdSorteo           Int
  Lugar              Int
  FechaCreacion      DateTime? @db.DateTime(0)
  FechaActualizacion DateTime? @db.DateTime(0)
  Estatus            Int

  @@index([IdSorteo], map: "IdSorteo")
}

model Login {
  IdLogin            Int      @id @default(autoincrement())
  Usuario            Usuario  @relation(fields: [IdUsuario], references: [IdUsuario])
  IdUsuario          Int      @unique 
  Correo             String   @db.VarChar(100)
  Contrasena         String   @db.VarChar(100)
  IdTipoLogin        Int
  FechaCreacion      DateTime? @db.DateTime(0)
  FechaActualizacion DateTime? @db.DateTime(0)
  Estatus            Int

  @@index([IdTipoLogin], map: "IdTipoLogin")
}

model Modulo {
  IdModulo           Int       @id @default(autoincrement())
  Descripcion        String   @db.VarChar(50)
  Icono              String   @db.VarChar(50)
  Ruta               String   @db.VarChar(50)
  Padre              String   @db.VarChar(50)
  FechaCreacion      DateTime? @db.DateTime(0)
  FechaActualizacion DateTime? @db.DateTime(0)
  Estatus            Int
}

model Premio {
  IdPremio           Int       @id @default(autoincrement())
  IdSorteo           Int
  Descripcion        String   @db.VarChar(100)
  Lugar              Int
  FechaCreacion      DateTime? @db.DateTime(0)
  FechaActualizacion DateTime? @db.DateTime(0)
  Estatus            Int

  @@index([IdSorteo], map: "IdSorteo")
}

/// The underlying table does not contain a valid unique identifier and can therefore currently not be handled by Prisma Client.
model Sesion {
  Correo    String @db.VarChar(100) @id
  Token     String? @db.VarChar(500)
}

model Sorteo {
  IdSorteo           Int       @id @default(autoincrement())
  Nombre             String   @db.VarChar(100)
  FechaSorteo        DateTime @db.Date
  FechaCreacion      DateTime? @db.DateTime(0)
  FechaActualizacion DateTime? @db.DateTime(0)
  Estatus            Int
}

model TipoLogin {
  IdTipoLogin        Int       @id @default(autoincrement())
  Descripcion        String   @db.VarChar(20)
  FechaCreacion      DateTime? @db.DateTime(0)
  FechaActualizacion DateTime? @db.DateTime(0)
  Estatus            Int
}

model Usuario {
  IdUsuario          Int      @unique @id @default(autoincrement())
  Nombre             String   @db.VarChar(100)
  ApPaterno          String   @db.VarChar(100)
  ApMaterno          String   @db.VarChar(100)
  Telefono           String   @db.VarChar(10)
  Direccion          Direccion[] @relation
  Login              Login?       
  FechaCreacion      DateTime? @db.DateTime(0)
  FechaActualizacion DateTime? @db.DateTime(0)
  Estatus            Int
}
